---
interface Props {
	id: string;
	titleEn: string;
	titleIt: string;
	className?: string;
}

const { id, titleEn, titleIt, className = "" } = Astro.props;
---

<section id={id} class={`section ${className}`}>
	<div class="content">
		<h2 data-en={titleEn} data-it={titleIt}>{titleEn}</h2>
		<slot />
	</div>
</section>

<style>
	.section {
		padding: 6rem 1rem;
		position: relative;
		overflow: hidden;
	}
	.section::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('https://images.unsplash.com/photo-1533090161767-e6ffed986c88?auto=format&fit=crop&q=80&w=1000') center/cover;
		opacity: 0.03;
		z-index: 0;
	}
	.content {
		position: relative;
		z-index: 1;
		max-width: 1200px;
		margin: 0 auto;
	}
	h2 {
		font-size: 2.5rem;
		margin-bottom: 2rem;
		text-align: center;
	}
	:global(.bg-light) {
		background: rgb(var(--accent));
	}
	:global(.bg-light)::before {
		opacity: 0.05;
	}
</style>