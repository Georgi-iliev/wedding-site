<div class="hero">
	<div class="overlay"></div>
	<div class="content">
		<h1>Davide & Modupe</h1>
		<p class="date">September 2025</p>
		<p class="locations" data-en="London & Sicily" data-it="Londra & Sicilia">London & Sicily</p>
	</div>
</div>

<style>
	.hero {
		height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background: url('https://images.pexels.com/photos/1024993/pexels-photo-1024993.jpeg') center/cover;
		color: white;
		text-align: center;
		position: relative;
	}
	.overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.5));
	}
	.content {
		position: relative;
		z-index: 1;
		padding: 1rem;
		animation: fadeIn 1.5s ease-out;
	}
	h1 {
		font-size: 4.5rem;
		margin-bottom: 1rem;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
	}
	.date {
		font-size: 2.2rem;
		margin-bottom: 0.5rem;
		font-family: 'Cormorant Garamond', serif;
		text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
	}
	.locations {
		font-size: 1.2rem;
		text-transform: uppercase;
		letter-spacing: 0.2em;
		text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
	}
	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
	@media (max-width: 768px) {
		h1 {
			font-size: 3rem;
		}
		.date {
			font-size: 1.5rem;
		}
		.locations {
			font-size: 1rem;
		}
	}
</style>