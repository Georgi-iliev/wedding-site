---
interface Props {
	titleEn: string;
	titleIt: string;
	date?: string;
	image?: string;
}

const { titleEn, titleIt, date, image } = Astro.props;
---

<div class="card">
	{image && <div class="card-image" style={`background-image: url(${image})`}></div>}
	<div class="card-content">
		<h3 data-en={titleEn} data-it={titleIt}>{titleEn}</h3>
		{date && <p class="date">{date}</p>}
		<slot />
	</div>
</div>

<style>
	.card {
		background: white;
		border-radius: 12px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		overflow: hidden;
		transition: transform 0.2s ease-in-out;
	}
	.card:hover {
		transform: translateY(-5px);
	}
	.card-image {
		height: 200px;
		background-position: center;
		background-size: cover;
	}
	.card-content {
		padding: 2rem;
	}
	h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
	}
	.date {
		color: rgba(var(--text), 0.8);
		margin-bottom: 1rem;
		font-style: italic;
	}
</style>